<%# action: nome da action para a qual o formulário deverar dar POST / PUT %>
<%= form_for @channel, :url => { :action => action } do |f| %>
  <fieldset>
    <legend>Novo Canal</legend>
    <%= f.label :name %>
    <%= f.text_field :name, :placeholder => "Nome do canal" %>
    <%= f.label :description %>
    <%= f.text_area :description, :placeholder => "Descrição do canal" %>
    <%= f.label :avatar %>
    <%= image_tag @channel.avatar(:thumb) %>
    <%= f.file_field :avatar %><br />
    <%= f.submit nil, class: 'btn' %>
  </fieldset>
<% end %>
