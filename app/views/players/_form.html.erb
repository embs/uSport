<%= form_for @player, action: action do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, required: :true %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :position %>
  <%= f.select :position,
    options_for_select([["Cornerback", 0], ["Defensive Line", 1], ["Full Back", 2],
      ["Linebacker", 3], ["Ofensive Line", 4], ["Quarterback", 5], ["Running Back", 6],
      ["Wide Receiver", 7], ["Tight End", 8], ["Safety", 9], ["Center", 10], ["Kicker", 11], ["Punter", 12]],
      [@player.try(:position)]) %>
  <%= f.label :number %>
  <%= f.text_field :number %>
  <span class="help-block">Somente n√∫meros</span>
  <%= f.label :team %>
  <%= f.select :team_id, options_for_select(Team.all.collect { |t| [t.name, t.id] },
    @player.try(:team).try(:id)) %>
  <div><%= f.submit nil, :class => 'btn' %></div>
<% end %>
