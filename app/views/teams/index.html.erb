<% content_for(:include_js) { 'channels' } %>

<% content_for :left_side_bar do %>
  <ul class='well nav nav-list'>
    <li>
      <%= link_to '<i class="icon-group"></i> Todos os Times'.html_safe,
        teams_path %>
    </li>
    <% if current_user %>
      <li>
        <%= link_to '<i class="icon-user-md"></i> Meus Times'.html_safe,
          teams_path(user_id: current_user) %>
      </li>
    <% end %>
  </ul><hr />
<% end %>

<%= link_to 'Criar novo time', new_team_path, class: 'btn' %>
<%= link_to 'Criar novo jogador', new_player_path, class: 'btn' %>

<%= render @teams %>
