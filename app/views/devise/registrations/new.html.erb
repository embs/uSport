<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <legend>Cadastrar</legend>
    Você pode
    <%= link_to "Logar com Facebook", '/auth/facebook', class: "btn btn-primary" %>
    ou preencher o formulário:
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true,
      :placeholder => 'Digite seu e-mail' %>
    <span class="help-block">Ex.: mike@example.com</span>

    <%= f.label :password, 'Senha' %>
    <%= f.password_field :password,
      :placeholder => 'Digite sua senha' %>
    <span class="help-block">No mínimo 6 caracteres.</span>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation,
      :placeholder => 'Confirme sua senha' %>
    <span class="help-block">Deve ser igual à do campo anterior.</span>

    <%= f.label :first_name %>
    <%= f.text_field :first_name,
      :placeholder => 'Digite seu nome' %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name,
      :placeholder => 'Digite seu sobrenome' %>

    <%= f.label :username %>
    <%= f.text_field :username,
      :placeholder => 'Pelo menos 5 caracteres' %>
    <span class="help-block">Ex.: pedro</span>

    <%= f.label :tos, class: 'checkbox' do %>
      <%= f.check_box :tos %> Aceito os
      <%= link_to 'Termos de Serviço', 'http://blog.quince.com.br/tos', target: '_blank' %>
      do uSport
    <% end %>
    <br />

    <div><%= f.submit nil, :class => 'btn' %></div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
