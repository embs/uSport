<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <legend>Cadastrar</legend>
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true,
      :placeholder => 'Digite seu e-mail' %>
    <span class="help-block">Ex.: mike@example.com</span>

    <%= f.label :password, 'Senha' %>
    <%= f.password_field :password,
      :placeholder => 'Digite sua senha' %>
    <span class="help-block">No mínimo 8 caracteres.</span>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation,
      :placeholder => 'Confirme sua senha' %>
    <span class="help-block">Deve ser igual à do campo anterior.</span>

    <%= f.label :first_name %>
    <%= f.text_field :first_name,
      :placeholder => 'Digite seu nome' %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name,
      :placeholder => 'Digite seu sobrenome' %>

    <%= f.label :username %>
    <%= f.text_field :username,
      :placeholder => 'Nome de usuário desejado' %>
    <span class="help-block">Ex.: mike</span>

    <div><%= f.submit nil, :class => 'btn' %></div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
