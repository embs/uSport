<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <legend>Cadastrar</legend>
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true,
      :placeholder => 'Digite seu e-mail' %><br />

    <%= f.label :password, 'Senha' %>
    <%= f.password_field :password,
      :placeholder => 'Digite sua senha' %><br />

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation,
      :placeholder => 'Confirme sua senha' %><br />

    <%= f.label :first_name %>
    <%= f.text_field :first_name,
      :placeholder => 'Digite seu nome' %><br />

    <%= f.label :last_name %>
    <%= f.text_field :last_name,
      :placeholder => 'Digite seu sobrenome' %><br />

    <%= f.label :username %>
    <%= f.text_field :username,
      :placeholder => 'Nome de usuÃ¡rio desejado' %><br />

    <div><%= f.submit "Cadastrar", :class => 'btn' %></div>
  </fieldset>
<% end %>

