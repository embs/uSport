<%= form_for @move, :url => user_channel_match_moves_path, :remote => :true do |f| %>
  
  <%#jogada %>
  <h5 ><%='Jogada: '%></h5>
  <div>
    <% f.label :jogada %>
    <%= f.select :kind, options_for_select(@kinds) %>
  </div>
  <%#time%>
  <h5 ><%='Time: '%></h5>
  <div> 
    <% f.label :time %>
    <%= f.select :team,
      options_for_select(@match.teams.collect { |t| [t.name, t.id] }) %>
  </div>
  <%#jogador %>
  <h5 ><%='Jogador: '%></h5>
  <div>
    <% f.label :jogador %>
    <%= f.select :player,
      options_for_select(Player.all.collect { |p| [p.first_name, p.id] }) %>
  </div>
  <%#jardas %>
  <h5 ><%='Jardas: '%></h5>
  <div> 
    <% f.label :jardas %>
    <%= f.select :yards, options_for_select(@yards) %>
  </div>
  <%#Descrição %>
  <h5><%="Descrição:"%></h5>
  <div>
    
    <% f.label :description, :value => "Descrição" %>
    <%= f.text_area :description, :cols => "30", :rows =>"8" %>
  </div>
  <%#quarto %>
  <h5 ><%='Quarto: '%></h5>
  <div> 
    <% f.label :quarto %>
    <%= f.select :quarter, options_for_select([["--", 0], ["First", 1],
      ["Second", 2], ["Third", 3], ["Fourth", 4]]) %>
  </div>
  <%#tempo %>
  <h5 ><%='Tempo: '%></h5> 
  <div >
    <% f.label :tempo %>
    <%= f.select :minute, options_for_select(@minutes) %>
  </div>
  <div style= "margin-left: 55px;" >
    <%= f.submit %>
  </div>

<% end %>
