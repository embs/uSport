<%= form_for(@move, :url => { :action => :update }) do |f| %>
  
  <h5 ><%='Descrição: '%></h5>
  <% f.label :description, :value => "Descrição" %>
  <%= f.text_area :description , :cols => "30", :rows => "10", :style => "resize: none;" %>
  
  <h5 ><%='Time: '%></h5>
  <div>
    <% f.label :time %>
    <%= f.select :team_id,
      options_for_select(@move.match.teams.collect { |t| [t.name, t.id] }) %>
  </div>
 <h5 ><%='Jogador: '%></h5>
  <div>
    <% f.label :jogador %>
    <%= f.select :player_id,
      options_for_select(Player.all.collect { |p| [p.first_name, p.id] }) %>
  </div>
  <%#jogada %>
  <h5 ><%='Jogada: '%></h5>
  <div>
    <% f.label :jogada %>
    <%= f.select :kind, options_for_select(@kinds) %>
  </div>
  <%#Quarto %>
  <h5 ><%='Quarto: '%></h5>
  <div>
    <% f.label :quarto %>
    <%= f.select :quarter, options_for_select([["--", 0], ["First", 1],
          ["Second", 2], ["Third", 3], ["Fourth", 4]]) %>
  </div>
  
  <h5> <%="Tempo:"%></h5>
  <div>
    <% f.label :tempo %>
    <%= f.select :minute, options_for_select(@minutes) %>
  </div>
  <h5> <%="Jardas:"%></h5>
  <div>
    <% f.label :jardas %>
    <%= f.select :yards, options_for_select(@yards) %>
  </div>
  <div>
    <%= f.submit :class => "btn" %>
  </div>
<% end %>
