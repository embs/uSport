<%= form_for @move, :url => user_channel_match_moves_path(@match.channel.owner,
  @match.channel, @match), :remote => :true do |f| %>
  <% f.label :description, :value => "Descrição" %>
  <%= f.text_area :description %>
    <% f.label :time %>
  <%= f.select :team,
    options_for_select(@match.teams.collect { |t| [t.name, t.id] }) %>
  <% f.label :jogador %>
  <%= f.select :player,
    options_for_select(Player.all.collect { |p| [p.first_name, p.id] }) %>
  <% f.label :jogada %>
  <%= f.select :kind, options_for_select(@kinds) %>
  <% f.label :quarto %>
  <%= f.select :quarter, options_for_select([["--", 0], ["First", 1],
    ["Second", 2], ["Third", 3], ["Fourth", 4]]) %>
  <% f.label :tempo %>
  <%= f.select :minute, options_for_select(@minutes) %>
  <% f.label :jardas %>
  <%= f.select :yards, options_for_select(@yards) %>
  <%= f.submit %>
<% end %>
