  <%= f.label :jogada %> <%= f.select :kind, options_for_select(@kinds) %><br />
  <%= f.label :jogador %>
  <%= f.select :player,
    options_for_select(Player.all.collect { |p| [p.first_name, p.id] }) %><br/>
  <%= f.label :time %>
  <%= f.select :team,
    options_for_select(@match.teams.collect { |t| [t.name, t.id] }) %><br />
  <%= f.label :quarto %>
  <%= f.select :quarter, options_for_select([["--", 0], ["First", 1],
    ["Second", 2], ["Third", 3], ["Fourth", 4]]) %><br />
  <%= f.label :tempo %>
  <%= f.select :minute, options_for_select(@minutes) %> (minuto)<br />
