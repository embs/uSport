<% content_for :load_javascript_before_application do %>
  <%= javascript_include_tag 'matches' %>
<% end %>

<%= form_for @match, :url => { :action => "create", channel_id: params[:channel_id] } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :placeholder => "Nome da partida" %><br />
  <%= f.label :date %>
  <div class='input-append'>
    <%= f.text_field :date, :readonly => 'readonly', :id => 'match_date',
      :value => Date.today.strftime('%d/%m/%Y') %>
    <span class="add-on"><i class="icon-calendar"></i></span>
  </div>
  <%= f.label :hour %>
  <%= f.time_select :date %><br />
  <%= f.label :place %>
  <%= f.text_field :place %>
  <%= f.label :type %>
  <%= f.select :type, options_for_select([["Futebol Americano", "FootballMatch"]]) %><br />
  <%= f.label :team1 %>
  <%= select_tag('football_match[teams_ids][]', options_for_select(@teams.collect { |t| [t.name, t.id] })) %><br />
  <%= f.label :team2 %>
  <%= select_tag('football_match[teams_ids][]', options_for_select(@teams.collect { |t| [t.name, t.id] })) %><br />
  <%= f.submit nil, class: 'btn' %>
<% end %>
